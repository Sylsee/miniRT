#include "minirt.h"

t_vector	new_ray(t_cam *cam, t_scene scene, int x, int y)
{
	t_vector	ray;

	ray.origin = cam->origin;
	ray.orientation.x = x - (scene.res.x / 2);
	ray.orientation.y = y - (scene.res.y / 2);
	ray.orientation.z = -(scene.res.x) / (2 * tan(cam->fov / 2));
	ray.orientation.x = cam->orientation.x * (get_norm2(ray.orientation) / get_norm2(cam->orientation));
	ray.orientation.y = cam->orientation.y * (get_norm2(ray.orientation) / get_norm2(cam->orientation));
	ray.orientation.z = cam->orientation.z * (get_norm2(ray.orientation) / get_norm2(cam->orientation));
	normalize(&ray.orientation);
	return (ray);
}
